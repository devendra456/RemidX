<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="5dp"
    android:layout_height="120dp"
    app:cardBackgroundColor="@color/white">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/truck"
        android:id="@+id/truckImage"
        android:scaleX="-1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UP 72 AN 2599"
        android:id="@+id/truck_Number"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:alpha="0.7"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BL Truck"
        android:id="@+id/truckName"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:alpha="0.6"
        app:layout_constraintTop_toBottomOf="@id/truck_Number"
        app:layout_constraintStart_toStartOf="@id/truck_Number"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expire on 22/07/2021"
        android:id="@+id/expiryDate"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/truckName"
        app:layout_constraintTop_toBottomOf="@id/truckName"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="30 Days Left"
        android:background="@drawable/green_bg"
        android:id="@+id/remainingDay"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:padding="2dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>